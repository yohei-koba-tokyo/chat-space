.chat-main
  .chat-main__main-header
    .chat-main__main-header__group
      .chat-main__main-header__group__name
        test
      .chat-main__main-header__group__member
        Member: test
    =link_to "#", class: "edit-btn" do
      Edit
  .chat-main__message-list
    .chat-main__message-list__message
      .chat-main__message-list__message__sender
        .chat-main__message-list__message__sender__name
          test
        .chat-main__message-list__message__sender__date
          2020/02/04(mon) 17:20:20
      .chat-main__message-list__message__text
        test test test
  .chat-main__message-form
    %form.new_message
      .input-box
        %input{type: "text", class: "input-box__text", placeholder: "type a message"}
        %label{class: "input-box__image"}
          = icon('fas fa-lg', 'image')
          %input{type: "file", class: "input-box__image__file"}
      %input{type: "submit", class: "submit-btn", value: "Send"}